@model IEnumerable<AlKardeslerTicaretApp.Models.mAdminOrder>
@{
    ViewBag.Title = "Sipariş Yönet";
    Layout = "/Views/Shared/Layout.cshtml";
}


<div class="container">
    <h3 class="text-center mt-3 tema-rengi alticizgili">Admin Sipariş Paneli</h3>
    <table class="text-center table table-hover table-striped">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Sipariş Numarası</th>
                <th scope="col">Sipariş Tarihi</th>
                <th scope="col">Toplam Ücret</th>
                <th scope="col">Durum</th>
                <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model) { 
            <tr>
                <td>@item.Id</td>
                <td>@item.OrderNumber</td>
                <td>@item.OrderDate</td>
                <td>@item.Total₺</td>
                <td>@item.OrderState</td>
                <td>
                    <a href="/Order/AdminDetail/@item.Id"><button class="btn btn-info">Detay</button></a>
                </td>
            </tr>
            }

        </tbody>
    </table>
</div>